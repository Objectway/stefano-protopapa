include inputStmp.pug

mixin buttStmp(tipo)
    button(type= tipo)= tipo

    
doctype html
html
    head
        title Form1
    body
        div
            h1 Form 1
            form(action="https://www.google.com", method="GET", target="_blank")
                fieldset
                    legend Anagrafica
                    +inputStmp("name", "text")
                    +inputStmp("surname", "text")
                    +inputStmp("male", "radio")
                    +inputStmp("female", "radio")
                    select
                        option Milano
                        option Roma   
                br       
                fieldset 
                    legend Utenza
                    +inputStmp("nick", "text")
                    +inputStmp("pw1", "password")
                    +inputStmp("pw2", "password")
                    +inputStmp("mail", "mail")
                br
                fieldset 
                    legend Note
                    textarea
                br
                +buttStmp("submit")
                +buttStmp("reset")